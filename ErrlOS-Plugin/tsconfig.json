{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES2017"
		],
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"typeRoots": [
		"node_modules/@types",
		"tests"
	]
}

