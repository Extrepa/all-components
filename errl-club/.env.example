# Errl Club Simulator - Environment Variables
# Copy this file to .env and fill in your values

# Environment Mode
# Options: development, staging, production
VITE_ENV=development

# Supabase Configuration (for multiplayer/backend features)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# WebSocket Configuration (for real-time multiplayer)
# Development WebSocket endpoint
VITE_WS_ENDPOINT_DEV=ws://localhost:8080

# Staging WebSocket endpoint
VITE_WS_ENDPOINT_STAGING=wss://staging.example.com

# Production WebSocket endpoint
VITE_WS_ENDPOINT_PRODUCTION=wss://api.example.com

# Feature Flags (JSON object)
# Example: {"multiplayer": true, "analytics": false, "debugMode": true}
VITE_FEATURE_FLAGS={}

# Analytics Configuration (if using analytics)
VITE_ANALYTICS_ID=your_analytics_id_here

# Error Reporting (e.g., Sentry)
VITE_SENTRY_DSN=your_sentry_dsn_here

# API Endpoints
VITE_API_URL_DEV=http://localhost:3000
VITE_API_URL_STAGING=https://api-staging.example.com
VITE_API_URL_PRODUCTION=https://api.example.com

# Development Options
# Enable debug mode in development
VITE_DEBUG=true

# Enable performance monitoring
VITE_PERFORMANCE_MONITORING=true
